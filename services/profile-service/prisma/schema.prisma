// prisma/schema.prisma for profile-service
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model (subset for profile-service)
model User {
  id                 String   @id @default(auto()) @map("_id")
  name               String
  email              String   @unique
  birthDate          DateTime
  gender             String
  isVerified         Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  profile            Profile?
  photos             Photo[]
  matchesAsUser1     Match[]  @relation("MatchUser1")
  matchesAsUser2     Match[]  @relation("MatchUser2")

  @@map("users")
}

// Profile model
model Profile {
  id               String   @id @default(auto()) @map("_id")
  userId           String   @unique
  bio              String?
  interests        String[]
  preferredGender  String?
  maxDistance      Int?     @default(50)
  minAge           Int?     @default(18)
  maxAge           Int?     @default(100)
  showLocation     Boolean  @default(true)
  showAge          Boolean  @default(true)
  relationshipType String?  @default("RELATIONSHIP")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id])
  preferences      Preference?

  @@map("profiles")
}

// Photo model
model Photo {
  id        String   @id @default(auto()) @map("_id")
  userId    String
  url       String
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("photos")
}

// Preference model
model Preference {
  id               String   @id @default(auto()) @map("_id")
  profileId        String   @unique
  notifications    Boolean  @default(true)
  invisibleMode    Boolean  @default(false)
  superLikes       Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  profile          Profile   @relation(fields: [profileId], references: [id])

  @@map("preferences")
}

// Match model (subset for profile-service)
model Match {
  id        String   @id @default(auto()) @map("_id")
  user1Id   String
  user2Id   String
  status    String   @default("pending") // pending, matched, rejected
  createdAt DateTime @default(now())

  user1     User     @relation("MatchUser1", fields: [user1Id], references: [id])
  user2     User     @relation("MatchUser2", fields: [user2Id], references: [id])

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
  @@map("matches")
}
